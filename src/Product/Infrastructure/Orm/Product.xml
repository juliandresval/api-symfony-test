<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
  <entity
    name="App\Product\Domain\Entity\Product"
    table="product"
    repository-class="App\Product\Infrastructure\Repository\ProductRepository">
    <field
      name="id"
      type="integer"
      unique="true" />
    <field
      name="name"
      type="string"
      length="100" />
    <field
      name="description"
      type="text"
      length="1000" />
    <field
      name="price"
      type="decimal"
      scale="2"
      precision="14" />
    <field
      name="vatRate"
      type="decimal"
      scale="2"
      precision="5" />
    <field
      name="vatAmount"
      type="decimal"
      scale="2"
      precision="14" />
    <field
      name="finalPrice"
      type="decimal"
      scale="2"
      precision="14" />
    <field
      name="currency"
      type="string"
      length="3" />
    <id name="id" type="integer">
      <generator strategy="AUTO" />
    </id>
    <!--
      length="50"
