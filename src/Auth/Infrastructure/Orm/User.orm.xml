<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance">
  <entity name="App\Auth\Infrastructure\Security\User" table="user">
    <id name="id" type="integer">
      <generator strategy="AUTO" />
    </id>
    <field
      name="username"
      type="string"
      length="100" />
    <field
      name="roles"
      type="json" />
    <field
      name="password"
      type="string" />
  </entity>
</doctrine-mapping>